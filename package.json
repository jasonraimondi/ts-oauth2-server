{
  "version": "1.2.0-rc.0",
  "name": "@jmondi/oauth2-server",
  "author": "Jason Raimondi <jason@raimondi.us>",
  "module": "dist/oauth2-server.esm.js",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "clean": "rimraf dist",
    "create-exports": "barrelsby -d src/ --delete",
    "prebuild": "run-s clean create-exports",
    "build": "tsdx build --tsconfig tsconfig.build.json",
    "pretest": "run-s create-exports",
    "start": "tsdx watch --tsconfig tsconfig.build.json",
    "test": "jest",
    "test:cov": "jest --coverage",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prepare": "run-s build",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "barrelsby": "^2.2.0",
    "body-parser": "^1.19.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.0",
    "express": "^4.17.1",
    "fastify": "^3.18.1",
    "jest": "^26.6.3",
    "jest-date-mock": "^1.0.8",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5",
    "vuepress": "^1.8.2"
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "ms": "^2.1.3",
    "uri-js": "^4.4.1"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
